{
  "manifest_version": 2,
  "name": "NASA Acronyms (Beta)",
  "description": "Select a NASA or NASA-related acronym to expand it.",
  "version": "0.7",

  "browser_action": {
    "default_icon": "nasa-logo.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-3.1.0.min.js",
              "jquery-ui.min.js",
              "jquery.qtip.min.js",
              "script.js",
              "acronyms24k.json"
            ],
      "css": ["jquery-ui.min.css",
              "jquery.qtip.min.css"
            ]
    }
  ],

  "web_accessible_resources": [
    "acronyms24k.json"
  ],

  "permissions": [
  	"activeTab",
    "https://raw.githubusercontent.com/maliska/NASA-Acronyms/externalDatabase"
  ],

  "icons": {
    "16": "nasa-logo16.png",
    "48": "nasa-logo48.png",
    "128": "nasa-logo128.png"
  }
}
